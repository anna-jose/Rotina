<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/defaultTeal</item>
        <item name="colorPrimaryDark">@color/darkTeal</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash</item>
    </style>

    <style name="Home" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/ic_main</item>
        <item name="colorPrimary">@color/defaultTeal</item>
        <item name="colorPrimaryDark">@color/darkTeal</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tituloEtapa">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/darkTeal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="descEtapa">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="botaoredondo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="linearhorizontalEtapa">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/defaultTeal</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>